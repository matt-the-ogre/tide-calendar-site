{
  "name": "tide-calendar-tests",
  "version": "1.0.0",
  "description": "Playwright tests for Tide Calendar application",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:local": "playwright test --config=playwright.config.local.ts",
    "test:production": "playwright test --config=playwright.config.production.ts",
    "test:debug": "playwright test --debug",
    "install-browsers": "playwright install"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  }
}
